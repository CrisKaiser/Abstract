<Window x:Class="AbstractApp.SettingsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Speicherort für Projekte" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="SpeicherortTextBox" IsReadOnly="True" Margin="0,0,0,10"/>
            <Button Content="Speicherort auswählen" Click="BtnSpeicherortAuswaehlen_Click" Margin="0,0,0,10"/>
            <Button Content="Speichern" Click="BtnSpeichern_Click" Width="100" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>