<Window x:Class="AbstractApp.ProjektDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projektdetails" WindowState="Maximized">

    <Grid Background="#f4f4f4">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="ProjektNameText" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Name="ErstellungsdatumText" FontSize="16" Margin="0,0,0,20"/>
            <Button Content="Zurück" Width="200" Height="40" Click="BtnZurueck_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>