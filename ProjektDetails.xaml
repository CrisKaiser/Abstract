<Window x:Class="AbstractApp.ProjektDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Projektdetails" WindowState="Maximized">
    <Grid MouseRightButtonDown="Grid_MouseRightButtonDown">
        <!-- Karrierter Hintergrund (weiß mit dunkelgrauen Linien) -->
        <Grid.Background>
            <DrawingBrush Viewport="0,0,20,20" ViewportUnits="Absolute" TileMode="Tile">
                <DrawingBrush.Drawing>
                    <DrawingGroup>
                        <!-- Weiße Fläche -->
                        <GeometryDrawing Brush="White">
                            <GeometryDrawing.Geometry>
                                <RectangleGeometry Rect="0,0,20,20"/>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                        <!-- Dunkelgraue Linien -->
                        <GeometryDrawing>
                            <GeometryDrawing.Pen>
                                <Pen Brush="DarkGray" Thickness="1"/>
                                <!-- Dickere Linien -->
                            </GeometryDrawing.Pen>
                            <GeometryDrawing.Geometry>
                                <GeometryGroup>
                                    <!-- Horizontale Linien -->
                                    <LineGeometry StartPoint="0,0" EndPoint="20,0"/>
                                    <LineGeometry StartPoint="0,20" EndPoint="20,20"/>
                                    <!-- Vertikale Linien -->
                                    <LineGeometry StartPoint="0,0" EndPoint="0,20"/>
                                    <LineGeometry StartPoint="20,0" EndPoint="20,20"/>
                                </GeometryGroup>
                            </GeometryDrawing.Geometry>
                        </GeometryDrawing>
                    </DrawingGroup>
                </DrawingBrush.Drawing>
            </DrawingBrush>
        </Grid.Background>

        <!-- Projektinformationen oben links -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20" Background="White">
            <TextBlock Name="ProjektNameText" FontSize="20" FontWeight="Bold"/>
            <TextBlock Name="ErstellungsdatumText" FontSize="16" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Zurück-Button unten rechts -->
        <Button Content="Zurück" Width="100" Height="40" Click="BtnZurueck_Click" 
            VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20"/>

        <!-- Kontextmenü für Rechtsklick -->
        <Grid.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Neuer Cluster" Click="MenuItem_NeuerCluster_Click"/>
                <MenuItem Header="Cluster bearbeiten" Click="MenuItem_ClusterBearbeiten_Click"/>
                <MenuItem Header="Cluster löschen" Click="MenuItem_ClusterLoeschen_Click"/>
                <Separator/>
                <MenuItem Header="Eintrag hinzufügen" Click="MenuItem_EintragHinzufuegen_Click"/>
                <MenuItem Header="Eintrag bearbeiten" Click="MenuItem_EintragBearbeiten_Click"/>
                <MenuItem Header="Eintrag löschen" Click="MenuItem_EintragLoeschen_Click"/>
            </ContextMenu>
        </Grid.ContextMenu>
    </Grid>
</Window>