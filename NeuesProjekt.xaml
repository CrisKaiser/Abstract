<Window x:Class="AbstractApp.NeuesProjekt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neues Projekt" WindowState="Maximized">

    <Grid Background="#f4f4f4">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Neues Projekt erstellen" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBox Name="ProjektNameTextBox" Width="300" Height="30"/>
            <Button Content="Speichern" Width="200" Height="40" Click="BtnSpeichern_Click" Margin="0,10,0,0"/>
            <Button Content="Zurück" Width="200" Height="40" Click="BtnZurueck_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>

